# ============================================
# QA Flow - Environment Variables Template
# ============================================
# Copy this file to .env and fill with your actual values
# DO NOT commit .env to version control

# ============================================
# AI / Machine Learning
# ============================================

# Google Gemini AI API Key
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Azure DevOps Integration (Optional)
# ============================================

# Azure DevOps Organization URL
# Example: https://dev.azure.com/your-organization
AZURE_DEVOPS_ORG_URL=

# Personal Access Token (PAT)
# Generate at: https://dev.azure.com/[org]/_usersSettings/tokens
AZURE_DEVOPS_PAT=

# Azure DevOps Project Name
AZURE_DEVOPS_PROJECT=

# ============================================
# Database Configuration
# ============================================

# SQLite database file path
DATABASE_URL=sqlite:///./data/qa_automation.db

# ============================================
# Redis Configuration (for Celery)
# ============================================

# Redis connection URL
# Local: redis://localhost:6379/0
# Docker: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0

# ============================================
# Application Settings
# ============================================

# Debug mode (True for development, False for production)
DEBUG=True

# Output directory for generated files (.feature, .pdf, .docx)
OUTPUT_DIR=./output

# Upload directory for temporary files
UPLOAD_DIR=./uploads

# Maximum upload file size in MB
MAX_UPLOAD_SIZE_MB=10

# Allowed file extensions for upload (comma-separated)
ALLOWED_EXTENSIONS=xlsx,csv
